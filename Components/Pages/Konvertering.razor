@page "/konvertering"
@rendermode InteractiveServer //Hanterar användargränssnitthändelser

<h3>Konvertera meter till fot</h3>

<div class="mb-3">
    <label for="inputMeter" class="form-label">Ange längd in meter:</label>
    <input type="number" id="inputMeter" @bind="Meter" class="form-controll">
</div>

<button class="button btn-primary" @onclick="OnConvert">Konvertering</button>

<!--Utskrift om svar ok-->
@if (Resultat != null)
{
    <p class="mt-3">Resultat: @Resultat fot</p>
}


<!--Konvertera meter till fot (feet) - matas exempelvis 2 in för antal meter, ska resultatet visa 6,6 fot (avrunda till två decimaler).
        Konvertera km/h till miles/hour - matas exempelvis 100 in för km/h, ska resultatet visa 62 miles/hour (avrunda till heltal).
        -->

    @code {
        //Sätter getter/setter för egenskaper
        private double Meter { get; set; }
        private string? Resultat { get; set; }

        //Metod för konvertering till fot
        private void OnConvert()
        {
            Resultat = (Meter * 3.28084).ToString("F2");    //Rundar till 2 decimaler
        }


}