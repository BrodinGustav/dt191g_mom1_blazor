    @page "/konvertering"
    @rendermode InteractiveServer //Hanterar användargränssnitthändelser

    <h3>Konvertera meter till fot</h3>

    <div class="mb-3">
        <label for="inputMeter" class="form-label">Ange längd in meter:</label>
        <input type="number" id="inputMeter" @bind="Meter" class="form-controll">
    </div>

    <button class="button btn-primary" @onclick="OnConvertFot">Konvertering</button>

    <!--Utskrift om svar ok-->
    @if (Resultat != null)
    {
        <p class="mt-3">Resultat: @Resultat fot</p>
    }


    <h3>Konvertera km/h till miles/hour</h3>

    <div class="mb-3">
        <label for="inputKm" class="form-label">Ange km i h:</label>
        <input type="number" id="inputKm" @bind="Km" class="form-controll">
    </div>

    <button class="button btn-primary" @onclick="OnConvertMiles">Konvertering</button>

    <!--Utskrift om svar ok-->
    @if (ResultatMiles != null)
    {
        <p class="mt-3">Resultat: @ResultatMiles miles/hour</p>
    }



    @code {
        //Sätter getter/setter för egenskaper
        private double Meter { get; set; }
        private string? Resultat { get; set; }

        private double Km { get; set; }
        private string? ResultatMiles { get; set; }

        //Metod för konvertering till fot
        private void OnConvertFot()
        {
            Resultat = (Meter * 3.28084).ToString("F1"); //Rundar till 2 decimaler
        }

        //Metod för konvertering till miles/hour
        private void OnConvertMiles()
        {
            ResultatMiles = (Km * 0.621371192).ToString("F0"); //Rundar till 2 decimaler
        }


    }